@model List<RecommendationModel>

<table id="recommendations-datatable" class="table table-striped table-hover table-responsive" style="width: 100%;">
    <thead>
        <tr role="row" id="recommendations-search-row">
            <th style="width: 80%" rowspan="1" colspan="1"><input type="text" class="form-control input-sm" style="width: 100%" placeholder="Текст" /></th>
            <th style="width: 20%" rowspan="1" colspan="1"><input type="text" class="form-control input-sm" style="width: 100%" placeholder="Значение" /></th>
        </tr>
        <tr role="row">
            <th style="width: 80%"><i class="fa fa-fw fa-comment" aria-hidden="true"></i>&nbsp;Текст</th>
            <th style="width: 20%"><i class="fa fa-fw fa-hashtag" aria-hidden="true"></i>&nbsp;Значение</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@Model[i].Comment</td>
                <td>@Model[i].ValueString</td>
            </tr>
        }
    </tbody>
</table>