@model SaleItemsGroupViewModel

<li class="@(Model.IsSelected ? "sale-group-selected" : "")">
    <table class="table table-striped table-hover">
        <tr>
            <td style="width: 75px;">
                <img hide-if="@(!Model.HasMainPicture)"
                     class="sale-img"
                     src="@Url.Content(Model.MainPicturePath)" />
            </td>
            <td>
                <span>@Model.ArticleName</span><br />
                <span class="sale-item-group-code">@Model.ArticleCode</span><br/>
                <span class="sale-item-group-description">@Model.ArticleTypeName</span>
            </td>
            <td style="width: 160px;">Рек. цена: <b>@Model.RecommendedPrice</b> ₴</td>
            <td style="width: 150px;">Общее кол-во: <b class="sale-item-group-count">@Model.Count</b></td>
            <td style="width: 100px;">Выбрано: <b class="sale-item-group-selected-count">@Model.SelectedCount</b></td>
            <td style="width: 20%;">
                <div class="input-group input-group-sm">
                    <span class="input-group-addon"><i class="fa fa-fw fa-money"></i></span>
                    <input class="form-control input-sm sale-items-group-price" type="text" asp-for="@Model.Price" placeholder="Цена" autofocus />
                </div>
            </td>
            <td style="width: 80px;">
                <button class="btn btn-sm pull-right add-all-goods"
                        style="background-color: inherit;"
                        data-toggle="tooltip"
                        data-placement="bottom"
                        data-original-title="Применить ко всем невыбранным товарам"
                        data-goodsids="@Model.GoodsIds"
                        title="">
                    <i class="fa fa-fw fa-cart-plus" style="color: #18bc9c"></i>
                </button>
                <button class="btn btn-sm pull-right remove-all-goods"
                        style="background-color: inherit;"
                        data-toggle="tooltip"
                        data-placement="bottom"
                        data-original-title="Убрать все выбранные товары"
                        data-goodsids="@Model.GoodsIds"
                        title="">
                    <i class="fa fa-fw fa-times" style="color: #f39c12"></i>
                </button>
            </td>
        </tr>
    </table>
    <ul>
        @foreach (var saleItem in Model.Items)
        {
            @Html.Partial("Components/SaleItems/_ItemTreeNode", saleItem)
        }
    </ul>
</li>
