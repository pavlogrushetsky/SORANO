@model SaleItemsGroupViewModel

<li class="@(Model.IsSelected ? "sale-group-selected" : "")">
    <table class="table table-striped table-hover">
        <tr>
            <td style="width: 75px;">
                @if (Model.HasMainPicture)
                {
                    <img class="sale-img" src="@Url.Content(Model.MainPicturePath)"/>
                }
            </td>
            <td>
                <span>@Model.ArticleName</span><br/>
                <span class="sale-item-group-description">@Model.ArticleTypeName</span>             
            </td>
            <td>Общее кол-во: <b>@Model.Count</b></td>
            <td>Выбрано: <b>@Model.SelectedCount</b></td>
            <td style="width: 20%;">             
                <div class="input-group input-group-sm">
                    <span class="input-group-addon"><i class="fa fa-fw fa-money"></i></span>
                    <input class="form-control input-sm" type="text" asp-for="Price" placeholder="Цена" autofocus/>
                </div>
            </td>
            <td style="width: 20px;">
                @if (Model.IsSelected)
                {
                    <button asp-controller="Sale"
                            asp-action="RemoveAllGoods"
                            class="btn btn-sm pull-right"
                            data-toggle="tooltip"
                            data-placement="bottom"
                            data-original-title="Убрать все"
                            title=""
                            style="background-color: inherit;">
                        <i class="fa fa-fw fa-times" style="color: #f39c12;" aria-hidden="true"></i>
                    </button>
                }
                else
                {
                    <button asp-controller="Sale"
                            asp-action="AddAllGoods"
                            class="btn btn-sm pull-right"
                            data-toggle="tooltip"
                            data-placement="bottom"
                            data-original-title="Добавить все"
                            title=""
                            style="background-color: inherit;">
                        <i class="fa fa-fw fa-cart-plus" style="color: #18bc9c;" aria-hidden="true"></i>
                    </button>
                }                               
            </td>
        </tr>   
    </table>
    <ul>
        @foreach (var saleItem in Model.Items)
        {
            @Html.Partial("Components/SaleItems/_ItemTreeNode", saleItem)
        }
    </ul>
</li>
