@model List<AttachmentModel>

<table id="attachments-datatable" class="table table-striped table-hover table-responsive" style="width: 100%;">
    <thead>
        <tr role="row" id="attachments-search-row">
            <th style="width: 53%" rowspan="1" colspan="1"><input type="text" class="form-control input-sm" style="width: 100%" placeholder="Название" /></th>
            <th style="width: 35%" rowspan="1" colspan="1"><input type="text" class="form-control input-sm" style="width: 100%" placeholder="Тип" /></th>
            <th style="width: 12%" rowspan="1" colspan="1"></th>
        </tr>
        <tr role="row">
            <th style="width: 53%"><i class="fa fa-fw fa-align-justify" aria-hidden="true"></i>&nbsp;Название</th>
            <th style="width: 35%"><i class="fa fa-fw fa-paperclip" aria-hidden="true"></i>&nbsp;Тип</th>
            <th style="width: 12%">Действия</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@Model[i].Name</td>
                <td>@Model[i].Type.Name</td>
                <td>
                    @* ReSharper disable once Mvc.ActionNotResolved *@
                    <a asp-action="DownloadFile"
                       asp-route-path="@Model[i].FullPath"
                       asp-route-name="@Model[i].Name"
                       class="btn btn-xs btn-success"
                       data-toggle="tooltip"
                       data-placement="right"
                       data-original-title="Скачать вложение"
                       title="">
                        <i class="fa fa-fw fa-download" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>