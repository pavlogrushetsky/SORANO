@model ArticleModel

@{
    var isEdit = ViewData.ContainsKey("IsEdit") && (bool)ViewData["IsEdit"];
    var title = isEdit ? "Редактирование" : "Создание";
}

@{
    ViewBag.Title = "SORANO - " + title + " артикула";
    ViewBag.Header = title;
    ViewBag.Description = " артикула";
    ViewBag.Icon = "fa fa-barcode";
}

@section Breadcrumb {
    <ul class="breadcrumb">
        <li><a asp-controller="Home" asp-action="Index">Главная</a></li>
        <li><a asp-controller="Article" asp-action="Index">Артикулы</a></li>
        <li class="active">@title артикула</li>
    </ul>
}

<form asp-action="@(isEdit ? "Update" : "Create")"
      asp-controller="Article"
      method="post"
      enctype="multipart/form-data">
    <input type="hidden" asp-for="ID"/>
    <input type="hidden" asp-for="Type.ID"/>
    <input type="hidden" asp-for="Type.Name" />
    @for (var i = 0; i < Model.Recommendations.Count; i++)
    {
        <input type="hidden" asp-for="@Model.Recommendations[i].ID" />
        <input type="hidden" asp-for="@Model.Recommendations[i].ParentID" />
    }
    @for (int i = 0; i < Model.Attachments.Count; i++)
    {
        <input type="hidden" asp-for="@Model.Attachments[i].ID" />
        <input type="hidden" asp-for="@Model.Attachments[i].IsNew" />
        <input type="hidden" asp-for="@Model.Attachments[i].FullPath" />
        <input type="hidden" asp-for="@Model.Attachments[i].Type.MimeTypes" />
        <input type="hidden" asp-for="@Model.Attachments[i].Type.Name" />
    }
    @Html.HiddenFor(m => m.MainPicture.ID)
    @Html.HiddenFor(m => m.MainPicture.Name)
    @Html.HiddenFor(m => m.MainPicture.FullPath)
    @Html.HiddenFor(m => m.MainPicture.TypeID)
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12">
            <div class="form-group">
                <label class="control-label" asp-for="Name">Название:</label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-barcode"></i></span>
                    <input class="form-control" type="text" asp-for="Name" placeholder="Название" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="Description">Описание:</label>
                <div class="input-group">
                    <span class="input-group-addon" style="vertical-align: top"><i class="fa fa-align-justify"></i></span>
                    <textarea class="form-control" style="resize: vertical;" rows="3" asp-for="Description" placeholder="Описание"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="Producer">Производитель:</label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-suitcase"></i></span>
                    <input class="form-control" type="text" asp-for="Producer" placeholder="Производитель" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="Code">Код:</label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-barcode"></i></span>
                    <input class="form-control" type="text" asp-for="Code" placeholder="Код" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="Barcode">Штрих-код:</label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-barcode"></i></span>
                    <input class="form-control" type="text" asp-for="Barcode" placeholder="Штрих-код" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">Родительский тип:</label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-tags"></i></span>
                    <div class="form-control">
                        <span>@Model.Type?.Name</span>
                    </div>
                    <span class="input-group-btn">
                        <button class="btn btn-default"
                                type="submit"
                                asp-action="SelectParentType"
                                asp-route-returnUrl="@(isEdit ? Url.Action("Update", "Article") : Url.Action("Create", "Article"))"
                                style="border-top-left-radius: 0; border-bottom-left-radius: 0;"
                                data-toggle="tooltip"
                                data-placement="right"
                                data-original-title="Назначить родительский тип"
                                title="">
                            <i class="fa fa-pencil"></i>
                        </button>                       
                    </span>
                    <span asp-validation-for="Type" style="display: none;"></span>
                </div>
            </div>
        </div>
    <div class="col-lg-6 col-md-6 col-sm-12">
        @Html.Partial("~/Views/Shared/_MainPictureForm.cshtml", Model)
        @Html.Partial("~/Views/Shared/_AttachmentsForm.cshtml", Model)
        @Html.Partial("~/Views/Shared/_RecommendationsForm.cshtml", Model)
    </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <a class="btn btn-default" asp-controller="Article" asp-action="Index">
                    <i class="fa fa-close"></i>
                    Отмена
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-check"></i>
                    Сохранить
                </button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <environment names="Development">
        <script src="js/pages/articleCreate.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="js/pages/articleCreate.min.js" asp-append-version="true"></script>
    </environment>
}