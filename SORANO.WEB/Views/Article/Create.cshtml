@model ArticleModel

@{
    var isEdit = ViewData.ContainsKey("IsEdit") && (bool)ViewData["IsEdit"];
    var title = isEdit ? "Редактирование" : "Создание";
    var hasMainPicture = !string.IsNullOrEmpty(Model.MainPicture.Name);
}

@{
    ViewBag.Title = "SORANO - " + title + " артикула";
    ViewBag.Header = title;
    ViewBag.Description = " артикула";
    ViewBag.Icon = "fa fa-barcode";
}

@section Breadcrumb {
    <ul class="breadcrumb">
        <li><a asp-controller="Home" asp-action="Index">Главная</a></li>
        <li><a asp-controller="Article" asp-action="Index">Артикулы</a></li>
        <li class="active">@title артикула</li>
    </ul>
}

<form asp-action="@(isEdit ? "Update" : "Create")"
      asp-controller="Article"
      method="post"
      enctype="multipart/form-data">
    <input type="hidden" asp-for="ID"/>
    <input type="hidden" asp-for="Type.ID"/>
    <input type="hidden" asp-for="Type.Name" />
    @for (var i = 0; i < Model.Recommendations.Count; i++)
    {
        <input type="hidden" asp-for="@Model.Recommendations[i].ID" />
        <input type="hidden" asp-for="@Model.Recommendations[i].ParentID" />
    }
    @for (int i = 0; i < Model.Attachments.Count; i++)
    {
        <input type="hidden" asp-for="@Model.Attachments[i].ID" />
        <input type="hidden" asp-for="@Model.Attachments[i].IsNew" />
        <input type="hidden" asp-for="@Model.Attachments[i].FullPath" />
    }
    @Html.HiddenFor(m => m.MainPicture.ID)
    @Html.HiddenFor(m => m.MainPicture.Name)
    @Html.HiddenFor(m => m.MainPicture.FullPath)
    @Html.HiddenFor(m => m.MainPicture.TypeID)
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12">
            <div class="form-group">
                <label class="control-label" asp-for="Name">Название:</label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-barcode"></i></span>
                    <input class="form-control" type="text" asp-for="Name" placeholder="Название" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="Description">Описание:</label>
                <div class="input-group">
                    <span class="input-group-addon" style="vertical-align: top"><i class="fa fa-align-justify"></i></span>
                    <textarea class="form-control" style="resize: vertical;" rows="3" asp-for="Description" placeholder="Описание"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="Producer">Производитель:</label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-suitcase"></i></span>
                    <input class="form-control" type="text" asp-for="Producer" placeholder="Производитель" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="Code">Код:</label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-barcode"></i></span>
                    <input class="form-control" type="text" asp-for="Code" placeholder="Код" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="Barcode">Штрих-код:</label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-barcode"></i></span>
                    <input class="form-control" type="text" asp-for="Barcode" placeholder="Штрих-код" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">Родительский тип:</label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-tags"></i></span>
                    <div class="form-control">
                        <span>@Model.Type?.Name</span>
                    </div>
                    <span class="input-group-btn">
                        <button class="btn btn-default"
                                type="submit"
                                asp-action="SelectParentType"
                                asp-route-returnUrl="@(isEdit ? Url.Action("Update", "Article") : Url.Action("Create", "Article"))"
                                style="border-top-left-radius: 0; border-bottom-left-radius: 0;"
                                data-toggle="tooltip"
                                data-placement="right"
                                data-original-title="Назначить родительский тип"
                                title="">
                            <i class="fa fa-pencil"></i>
                        </button>                       
                    </span>
                    <span asp-validation-for="Type" style="display: none;"></span>
                </div>
            </div>
        </div>
    <div class="col-lg-6 col-md-6 col-sm-12">
        <div class="form-group">
            <label class="control-label">Основное изображение:</label>
            <div class="input-group">
                <img id="mainPicture_img" 
                     style='width: 150px; height: 200px; border: 2px solid #dce4ec; box-shadow: none; border-radius: 4px; object-fit: contain; @(hasMainPicture ? "" : "display: none;")' 
                     src="@(hasMainPicture ? Url.Content(Model.MainPicture.FullPath) : "#")"/>

                   
                <div id="mainPicture_info"
                     style='width: 150px; height: 200px; border: 2px solid #dce4ec; box-shadow: none; border-radius: 4px; display: inline-block; text-align: center;@(hasMainPicture ? "display: none;" : "")'>                        
                    <p class="text-info">
                        <i class="fa fa-fw fa-info" aria-hidden="true"></i>
                        Основное изображение отсутствует
                    </p>
                </div>              
                <div class="btn-group-vertical" style="vertical-align: top; margin-left: 5px;">
                    <label data-toggle="tooltip"
                           data-placement="right"
                           data-original-title="Выбрать файл изображения"
                           class="btn btn-default"
                           style="border-top-right-radius: 4px; border-top-left-radius: 4px; border-bottom-right-radius: 4px; border-bottom-left-radius: 4px;">
                        <i class="fa fa-paperclip"></i>
                        <input type="file"
                               style="display: none !important;"
                               name="mainPictureFile"
                               onchange="previewMainPicture(this);"
                               accept="image/*"/>
                    </label>
                    <button class="btn btn-default"
                            type="submit"
                            style="margin-top: 5px; border-top-right-radius: 4px; border-top-left-radius: 4px; border-bottom-right-radius: 4px; border-bottom-left-radius: 4px;"
                            data-toggle="tooltip"
                            data-placement="right"
                            data-original-title="Выбрать изображение из существующих вложений"
                            title="">
                        <i class="fa fa-th-large"></i>
                    </button>
                    @if (hasMainPicture)
                    {
                        <button class="btn btn-danger"
                                type="submit"
                                asp-action="DeleteMainPicture"
                                asp-route-isEdit="@isEdit"
                                style="margin-top: 5px; border-top-right-radius: 4px; border-top-left-radius: 4px; border-bottom-right-radius: 4px; border-bottom-left-radius: 4px;"
                                data-toggle="tooltip"
                                data-placement="right"
                                data-original-title="Удалить изображение"
                                title="">
                            <i class="fa fa-trash"></i>
                        </button>
                    }                    
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label">Вложения:</label>
            <div id="attachments">
                <table class="table table-responsive" style="width: 100%; margin-bottom: 2px;">
                    @if (Model.Attachments.Any())
                    {
                        <thead>
                        <tr>
                            <th style="width: 60%"><i class="fa fa-fw fa-align-justify" aria-hidden="true"></i>Название</th>
                            <th style="width: 35%"><i class="fa fa-fw fa-paperclip" aria-hidden="true"></i>Тип</th>
                            <th style="width: 5%"></th>
                        </tr>
                        </thead>
                        <tbody>
                        @for (int i = 0; i < Model.Attachments.Count; i++)
                        {
                            <tr>
                                <td style="width: 60%; padding: 2px;">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-file-image-o"></i></span>
                                        <input class="form-control" type="text" id="attachment_name_@i" asp-for="@Model.Attachments[i].Name"/>
                                        <span class="input-group-btn">
                                            <label class="btn btn-default">
                                                <i class="fa fa-paperclip"></i>
                                                <input type="file"
                                                       style="display: none !important;"
                                                       id="attachment_input_@i"
                                                       name="attachments"
                                                       data-toggle="tooltip"
                                                       data-placement="right"
                                                       data-original-title="Выбрать файл"/>
                                            </label>
                                        </span>
                                    </div>
                                </td>
                                <td style="width: 35%; padding: 2px;">
                                    <select class="form-control" asp-for="@Model.Attachments[i].TypeID" asp-items="@ViewBag.AttachmentTypes"></select>
                                </td>
                                <td style="width: 5%; padding: 2px;">
                                    <button class="btn btn-danger"
                                            type="submit"
                                            asp-action="DeleteAttachment"
                                            asp-route-isEdit="@isEdit"
                                            asp-route-num="@i"
                                            data-toggle="tooltip"
                                            data-placement="right"
                                            data-original-title="Удалить вложение"
                                            title="">
                                        <i class="fa fa-trash" aria-hidden="true"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                        </tbody>
                    }

                    <tfoot>
                    <tr>
                        <td colspan="2" style="padding: 2px; vertical-align: middle;">
                            @if (!Model.Attachments.Any())
                            {
                                <p class="text-info">
                                    <i class="fa fa-fw fa-info" aria-hidden="true"></i>
                                    Вложения отсутствуют
                                </p>
                            }
                        </td>
                        <td style="padding: 2px;">
                            <button class="btn btn-success pull-right"
                                    type="submit"
                                    asp-action="AddAttachment"
                                    asp-route-isEdit="@isEdit"
                                    data-toggle="tooltip"
                                    data-placement="right"
                                    data-original-title="Добавить вложение"
                                    title="">
                                <i class="fa fa-plus" aria-hidden="true"></i>
                            </button>
                        </td>
                    </tr>
                    </tfoot>
                </table>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="Name">Рекомендации:</label>
            <div id="recommendations">
                <table class="table table-responsive" style="width: 100%; margin-bottom: 2px;">
                    @if (Model.Recommendations.Any())
                    {
                        <thead>
                        <tr>
                            <th style="width: 70%"><i class="fa fa-fw fa-comment" aria-hidden="true"></i>Текст</th>
                            <th style="width: 25%"><i class="fa fa-fw fa-hashtag" aria-hidden="true"></i>Значение</th>
                            <th style="width: 5%"></th>
                        </tr>
                        </thead>
                        <tbody>
                        @for (var i = 0; i < Model.Recommendations.Count; i++)
                        {
                            <tr>
                                <td style="padding: 2px;"><textarea style="resize: vertical;" class="form-control recommendations" rows="1" asp-for="@Model.Recommendations[i].Comment"></textarea></td>
                                <td style="padding: 2px;"><input class="form-control recommendations" type="text" asp-for="@Model.Recommendations[i].ValueString"/></td>
                                <td style="padding: 2px;">
                                    <button class="btn btn-danger"
                                            type="submit"
                                            asp-action="DeleteRecommendation"
                                            asp-route-isEdit="@isEdit"
                                            asp-route-num="@i"
                                            data-toggle="tooltip"
                                            data-placement="right"
                                            data-original-title="Удалить рекомендацию"
                                            title="">
                                        <i class="fa fa-trash" aria-hidden="true"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                        </tbody>
                    }
                    <tfoot>
                    <tr>
                        <td colspan="2" style="padding: 2px; vertical-align: middle;">
                            @if (!Model.Recommendations.Any())
                            {
                                <p class="text-info">
                                    <i class="fa fa-fw fa-info" aria-hidden="true"></i>
                                    Рекомендации отсутствуют
                                </p>
                            }
                        </td>
                        <td style="padding: 2px;">
                            <button class="btn btn-success pull-right"
                                    type="submit"
                                    asp-action="AddRecommendation"
                                    asp-route-isEdit="@isEdit"
                                    data-toggle="tooltip"
                                    data-placement="right"
                                    data-original-title="Добавить рекомендацию"
                                    title="">
                                <i class="fa fa-plus" aria-hidden="true"></i>
                            </button>
                        </td>
                    </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <a class="btn btn-default" asp-controller="Article" asp-action="Index">
                    <i class="fa fa-close"></i>
                    Отмена
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-check"></i>
                    Сохранить
                </button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $("input.input-validation-error").not(".recommendations").closest(".form-group").addClass("has-error");
            $("select.input-validation-error").closest(".form-group").addClass("has-error");
            $("span.field-validation-error").closest(".form-group").addClass("has-error");

            $('input[type=file]').change(function () {
                var id = $(this).attr('id');
                var name = document.getElementById(id).files[0].name;
                var matches = id.match(/\d+$/);
                if (matches) {
                    var number = matches[0];
                    $('#attachment_name_' + number).val(name);
                    $('#Attachments_' + number + '__IsNew').val(true);
                }
            });
        });

        function previewMainPicture(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById("mainPicture_info").style.display = 'none';
                    document.getElementById("mainPicture_img").style.display = 'inline-block';
                    $('#mainPicture_img').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}