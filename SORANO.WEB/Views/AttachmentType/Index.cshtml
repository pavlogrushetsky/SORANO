@model List<AttachmentTypeModel>

@{
    ViewBag.Title = "SORANO - Типы вложений";
    ViewBag.Header = "Типы";
    ViewBag.Description = "вложений";
    ViewBag.Icon = "fa fa-paperclip";
}

@section Styles {
    <link rel="stylesheet" href="~/lib/datatables.net-bs/css/dataTables.bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/datatables.net-responsive-bs/css/responsive.bootstrap.min.css" />
}

@section Breadcrumb {
    <ul class="breadcrumb">
        <li><a asp-controller="Home" asp-action="Index">Главная</a></li>
        <li class="active">Управление</li>
        <li class="active">Типы вложений</li>
    </ul>
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Таблица типов вложений
                <span class="badge" style="margin-left: 5px;">@Model.Count</span>
                <a class="btn btn-default btn-xs pull-right"
                   asp-controller="AttachmentType"
                   asp-action="Create"
                   data-toggle="tooltip"
                   data-placement="right"
                   data-original-title="Добавить тип вложения"
                   title="">
                    <i class="fa fa-plus" aria-hidden="true"></i>
                </a>
                <div class="clearfix"></div>
            </div>
            <div class="panel-body">
                <table id="attachment-types-datatable" class="table table-striped table-bordered table-hover table-responsive" style="width: 100%">
                    <thead>
                        <tr role="row" id="search-row">
                            <th style="width: 5%" rowspan="1" colspan="1"></th>
                            <th style="width: 20%" rowspan="1" colspan="1"><input type="text" class="form-control input-sm" style="width: 100%" placeholder="Название" /></th>
                            <th style="width: 30%" rowspan="1" colspan="1"><input type="text" class="form-control input-sm" style="width: 100%" placeholder="Описание" /></th>
                            <th style="width: 20%" rowspan="1" colspan="1"><input type="text" class="form-control input-sm" style="width: 100%" placeholder="Расширения" /></th>
                            <th style="width: 15%" rowspan="1" colspan="1"><input type="text" class="form-control input-sm" style="width: 100%" placeholder="Вложений" /></th>
                            <th style="width: 10%" rowspan="1" colspan="1"></th>
                        </tr>
                        <tr role="row">
                            <th style="width: 5%">ID</th>
                            <th style="width: 20%"><i class="fa fa-fw fa-paperclip" aria-hidden="true"></i>&nbsp;Название</th>
                            <th style="width: 30%"><i class="fa fa-fw fa-align-justify" aria-hidden="true"></i>&nbsp;Описание</th>
                            <th style="width: 20%"><i class="fa fa-fw fa-filter" aria-hidden="true"></i>&nbsp;Расширения</th>
                            <th style="width: 15%"><i class="fa fa-fw fa-hashtag" aria-hidden="true"></i>&nbsp;Вложений</th>
                            <th style="width: 10%">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var attachmentType in Model)
                        {
                            <tr class="@(attachmentType.IsDeleted ? "danger" : "")">
                                <td>@attachmentType.ID</td>
                                <td>@attachmentType.Name</td>
                                <td>@attachmentType.Comment</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(attachmentType.Extensions))
                                    {
                                        foreach (var extension in attachmentType.Extensions.Split(','))
                                        {
                                            <span class="label label-default">@extension</span>
                                        }
                                    }                                    
                                </td>
                                <td><span class="badge">@attachmentType.AttachmentsCount</span></td>
                                <td>
                                    @if (!attachmentType.IsDeleted)
                                    {
                                        if (!attachmentType.Name.Equals("Основное изображение"))
                                        {
                                            <a asp-controller="AttachmentType"
                                               asp-action="Update"
                                               asp-route-id="@attachmentType.ID"
                                               class="btn btn-xs btn-default"
                                               data-toggle="tooltip"
                                               data-placement="bottom"
                                               data-original-title="Редактировать свойства типа вложений"
                                               title="">
                                                <i class="fa fa-pencil-square" aria-hidden="true"></i>
                                            </a>
                                        }
                                        if (attachmentType.CanBeDeleted)
                                        {
                                            <a class="btn btn-xs btn-danger"
                                               data-toggle="tooltip"
                                               data-placement="bottom"
                                               data-original-title="Удалить тип вложений"
                                               title=""
                                               asp-controller="AttachmentType"
                                               asp-action="Delete"
                                               asp-route-id="@attachmentType.ID">
                                                <i class="fa fa-trash" aria-hidden="true"></i>
                                            </a>
                                        }
                                    }                                                                    
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script src="~/lib/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/lib/datatables.net-responsive-bs/js/responsive.bootstrap.min.js"></script>
    <environment names="Development">
        <script src="~/js/pages/attachmentTypeIndex.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/pages/attachmentTypeIndex.min.js" asp-append-version="true"></script>
    </environment>
}