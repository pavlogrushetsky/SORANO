@model UserModel

@{
    ViewBag.Title = "SORANO - Удаление пользователя";
    ViewBag.Header = "Удаление";
    ViewBag.Description = "пользователя из системы";
}

@section Breadcrumb {
    <ul class="breadcrumb">
        <li><a asp-controller="Home" asp-action="Index">Главная</a></li>
        <li><a asp-controller="User" asp-action="List">Пользователи</a></li>
        <li class="active">Удаление пользователя</li>
    </ul>
}

<h3>Вы уверены, что хотите удалить следующего пользователя?</h3>
<div>
    <dl class="dl-horizontal">        
        <dt>
            @Html.DisplayNameFor(model => model.Login)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Login)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <div class="form-group">
            <a class="btn btn-default" asp-controller="User" asp-action="List" >Отмена</a>
            <button type="submit" class="btn btn-danger">Удалить</button>
        </div>
    </form>
</div>