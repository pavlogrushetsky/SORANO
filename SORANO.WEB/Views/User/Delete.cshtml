@model UserModel

@{
    ViewBag.Title = "SORANO - Удаление пользователя";
    ViewBag.Header = "Удаление";
    ViewBag.Description = "пользователя";
}

@section Breadcrumb {
    <ul class="breadcrumb">
        <li><a asp-controller="Home" asp-action="Index">Главная</a></li>
        <li><a asp-controller="User" asp-action="List">Пользователи</a></li>
        <li class="active">Удаление пользователя</li>
    </ul>
}

<div class="col-lg-6 col-sm-12">
    <div class="row">
        <h5 class="@(Model.CanBeDeleted ? "" : "text-danger")">
            @(Model.CanBeDeleted
                ? "Вы уверены, что хотите удалить следующего пользователя?"
                : "Пользователь не может быть удалён, так как у него есть связанные с ним действия или он является текущим пользователем в системе.")
        </h5>
    </div>
    <br/>
    <div class="row">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Login)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Login)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <a class="btn btn-default" asp-controller="User" asp-action="List">Отмена</a>
                <button type="submit" class="btn btn-danger @(Model.CanBeDeleted ? "" : "disabled")">Удалить</button>
            </div>
        </form>
    </div>
</div>