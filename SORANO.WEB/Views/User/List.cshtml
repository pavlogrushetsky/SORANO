@model List<UserModel>

@{
    ViewBag.Title = "SORANO - Пользователи";
    ViewBag.Header = "Пользователи";
}

@section Styles {
    <link rel="stylesheet" href="~/lib/datatables.net-bs/css/dataTables.bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/datatables.net-responsive-bs/css/responsive.bootstrap.min.css" />
}

@section Breadcrumb {
    <ul class="breadcrumb">
        <li><a asp-controller="Home" asp-action="Index">Главная</a></li>
        <li class="active">@ViewBag.Header</li>
    </ul>
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                @ViewBag.Header
            </div>
            <div class="panel-body">
                <table id="users-datatable" class="table table-striped table-bordered table-hover table-responsive">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th><i class="fa fa-fw fa-user" aria-hidden="true"></i>&nbsp;Логин</th>
                            <th><i class="fa fa-fw fa-align-justify" aria-hidden="true"></i>&nbsp;Описание</th>
                            <th><i class="fa fa-fw fa-vcard" aria-hidden="true"></i>&nbsp;Роли</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.ID</td>
                                <td>@user.Login</td>
                                <td>@user.Description</td>
                                <td>
                                    @foreach (var role in user.Roles)
                                    {
                                        <div><span class="label label-default">@role</span></div>
                                    }
                                </td>
                                <td>
                                    <button class="btn btn-xs btn-default" title="Просмотреть информацию о пользователе"><i class="fa fa-info-circle" aria-hidden="true"></i></button>
                                    <button class="btn btn-xs btn-default" title="Редактировать свойства пользователя"><i class="fa fa-gear" aria-hidden="true"></i></button>
                                    <button class="btn btn-xs btn-danger" title="Удалить пользователя"><i class="fa fa-trash" aria-hidden="true"></i></button>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script src="~/lib/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/lib/datatables.net-responsive-bs/js/responsive.bootstrap.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#users-datatable").DataTable({
                responsive: true,
                "pagingType": "numbers",
                "language": {                    
                    "lengthMenu": "Отобразить _MENU_ пользователей на странице",
                    "zeroRecords": "Пользователи отсутствуют",
                    "info": "Отображение страницы _PAGE_ из _PAGES_",
                    "infoEmpty": "Записи отсутствуют",
                    "infoFiltered": "(Отфильтровано из _MAX_ записей)",
                    "search": "Поиск"
                }
            });
        });
    </script>
}
