@model ArticleTypeModel

@{
    ViewBag.Title = "SORANO - Детали типа артикулов";
    ViewBag.Header = "Детали";
    ViewBag.Description = "типа артикулов";
    ViewBag.Icon = "fa fa-info-circle";
}

@section Breadcrumb {
    <ul class="breadcrumb">
        <li><a asp-controller="Home" asp-action="Index">Главная</a></li>
        <li><a asp-controller="Article" asp-action="Index">Артикулы</a></li>
        <li class="active">Детали типа артикулов</li>
    </ul>
}

@section Styles {
    <link rel="stylesheet" href="~/lib/datatables.net-bs/css/dataTables.bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/datatables.net-responsive-bs/css/responsive.bootstrap.min.css" />
}

<div class="col-lg-12">
    <div class="row">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.ID)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ID)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>
            }    
            @if (Model.ParentType != null)
            {
                <dt>
                    @Html.DisplayNameFor(model => model.ParentType)
                </dt>
                <dd>
                    <a asp-controller="ArticleType"
                       asp-action="Details"
                       asp-route-id="@Model.ParentType.ID"
                       data-toggle="tooltip"
                       data-placement="right"
                       data-original-title="Просмотреть информацию о родительском типе артикулов"
                       title="">
                        @Html.DisplayFor(model => model.ParentType.Name)
                    </a>
                </dd>
                <dd>
                    @Html.DisplayFor(model => model.ParentType.Description)
                </dd>
            }            
            <dt>
                @Html.DisplayNameFor(model => model.Created)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Created)               
            </dd> 
            <dd>
                @Html.DisplayFor(model => model.CreatedBy)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Modified)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Modified)                
            </dd>
            <dd>
                @Html.DisplayFor(model => model.ModifiedBy)
            </dd>
            @if (Model.IsDeleted)
            {
                <dt>
                    @Html.DisplayNameFor(model => model.IsDeleted)
                </dt>
                <dd>
                    <span class="label label-danger">Удалён</span>
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Deleted)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Deleted)
                </dd>
                <dd>
                    @Html.DisplayFor(model => model.DeletedBy)
                </dd>
            }
        </dl>
    </div>
    <div class="row">
        <div class="panel-group" id="accordion">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapseRecommendations">
                            <span>
                                <i class="fa fa-fw fa-comments" aria-hidden="true"></i>
                                @Html.DisplayNameFor(m => m.Recommendations)
                                <span class="badge pull-right">@Model.Recommendations.Count</span>
                            </span>
                        </a>
                    </h4>
                </div>
                <div id="collapseRecommendations" class="panel-collapse collapse">
                    <div class="panel-body">
                        @Html.Partial("~/Views/Shared/_Recommendations.cshtml", Model.Recommendations)
                    </div>
                </div>
            </div>
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapseArticles">
                            <span>
                                <i class="fa fa-fw fa-barcode" aria-hidden="true"></i>
                                @Html.DisplayNameFor(m => m.Articles)
                                <span class="badge pull-right">@Model.Articles.Count</span>
                            </span>
                        </a>
                    </h4>
                </div>
                <div id="collapseArticles" class="panel-collapse collapse">
                    <div class="panel-body">
                        <table id="article-datatable" class="table table-striped table-bordered table-hover table-responsive" style="width: 100%">
                            <thead>
                                <tr role="row" id="search-row">
                                    <th style="width: 15%" rowspan="1" colspan="1"><input type="text" class="form-control input-sm" style="width: 100%" placeholder="Код" /></th>
                                    <th style="width: 45%" rowspan="1" colspan="1"><input type="text" class="form-control input-sm" style="width: 100%" placeholder="Название" /></th>
                                    <th style="width: 40%" rowspan="1" colspan="1"><input type="text" class="form-control input-sm" style="width: 100%" placeholder="Производитель" /></th>
                                </tr>
                                <tr role="row">
                                    <th style="width: 15%"><i class="fa fa-fw fa-barcode" aria-hidden="true"></i>&nbsp;Код</th>
                                    <th style="width: 45%"><i class="fa fa-fw fa-align-justify" aria-hidden="true"></i>&nbsp;Название</th>
                                    <th style="width: 40%"><i class="fa fa-fw fa-suitcase" aria-hidden="true"></i>&nbsp;Производитель</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (var i = 0; i < Model.Articles.Count; i++)
                                {
                                    <tr class="@(Model.Articles[i].IsDeleted ? "danger" : "")">
                                        <td>@Model.Articles[i].Code</td>
                                        <td>
                                            <a asp-controller="Article"
                                               asp-action="Details"
                                               asp-route-id="@Model.Articles[i].ID"
                                               data-toggle="tooltip"
                                               data-placement="bottom"
                                               data-original-title="Просмотреть информацию об артикуле"
                                               title="">
                                                @Model.Articles[i].Name
                                            </a>
                                        </td>
                                        <td>@Model.Articles[i].Producer</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <a class="btn btn-default" asp-controller="Article" asp-action="Index">
            <i class="fa fa-arrow-left"></i>
            Назад
        </a>
    </div>
</div>

@section Scripts {
    <script src="~/lib/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script src="~/lib/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/lib/datatables.net-responsive-bs/js/responsive.bootstrap.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var recommendationsTable = $("#recommendations-datatable").DataTable({
                responsive: true,
                "pagingType": "numbers",
                "language": {
                    "lengthMenu": "Отобразить _MENU_ рекомендаций на странице",
                    "zeroRecords": "Рекомендации отсутствуют",
                    "info": "Отображение страницы _PAGE_ из _PAGES_",
                    "infoEmpty": "Записи отсутствуют",
                    "infoFiltered": "(Отфильтровано из _MAX_ записей)",
                    "search": "Поиск"
                },
                "drawCallback": function () {
                    $('.pagination').addClass('pagination-sm');
                }
            });

            recommendationsTable.columns().eq( 0 ).each( function ( colIdx ) {
                $('input', $('#recommendations-datatable th')[colIdx] ).on( 'keyup change', function () {
                    recommendationsTable
                        .column( colIdx )
                        .search( this.value )
                        .draw();
                });
            });

            var articlesTable = $("#article-datatable").DataTable({
                responsive: true,
                "pagingType": "numbers",
                "language": {
                    "lengthMenu": "Отобразить _MENU_ артикулов на странице",
                    "zeroRecords": "Артикулы отсутствуют",
                    "info": "Отображение страницы _PAGE_ из _PAGES_",
                    "infoEmpty": "Записи отсутствуют",
                    "infoFiltered": "(Отфильтровано из _MAX_ записей)",
                    "search": "Поиск"
                },
                "drawCallback": function () {
                    $('.pagination').addClass('pagination-sm');
                }
            });

            articlesTable.columns().eq(0).each(function (colIdx) {
                $('input', $('#article-datatable th')[colIdx]).on('keyup change',
                    function () {
                        articlesTable
                            .column(colIdx)
                            .search(this.value)
                            .draw();
                    });
            });
        });
    </script>
}
