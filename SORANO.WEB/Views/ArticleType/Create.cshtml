@model ArticleTypeModel

@{
    var isEdit = ViewData.ContainsKey("IsEdit") && (bool)ViewData["IsEdit"];
    var title = isEdit ? "Редактирование" : "Создание";
}

@{
    ViewBag.Title = "SORANO - " + title + " типа артикулов";
    ViewBag.Header = title;
    ViewBag.Description = "типа артикулов";
    ViewBag.Icon = "fa fa-tag";
}

@section Breadcrumb {
    <ul class="breadcrumb">
        <li>
            <a asp-controller="Home" asp-action="Index">
                <i class="fa fa-home"></i>
                Главная
            </a>
        </li>
        <li>
            <a asp-controller="Article" asp-action="Index">
                <i class="fa fa-barcode"></i>
                Артикулы
            </a>
        </li>
        <li class="active">@title типа артикулов</li>
    </ul>
}

<form asp-action="@(isEdit ? "Update" : "Create")"
      asp-controller="ArticleType"
      method="post">
    @if (Model.ParentType != null)
    {
        <input type="hidden" asp-for="ParentType.ID" />
        <input type="hidden" asp-for="ParentType.Name" />
    }
    <input type="hidden" asp-for="ID" />
    @for (var i = 0; i < Model.Recommendations.Count; i++)
    {
        <input type="hidden" asp-for="@Model.Recommendations[i].ID" />
        <input type="hidden" asp-for="@Model.Recommendations[i].ParentID" />
    }
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12">
            <div class="form-group">
                <label class="control-label" asp-for="Name">Название:</label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-tag"></i></span>
                    <input class="form-control" type="text" asp-for="Name" placeholder="Название" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="Description">Описание:</label>
                <div class="input-group">
                    <span class="input-group-addon" style="vertical-align: top"><i class="fa fa-align-justify"></i></span>
                    <textarea class="form-control" style="resize: vertical;" rows="3" asp-for="Description" placeholder="Описание"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">Родительский тип:</label>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-tags"></i></span>
                    <div class="form-control">
                        <span>@Model.ParentType?.Name</span>
                    </div>
                    <span class="input-group-btn">
                        <button class="btn btn-default"
                                type="submit"
                                asp-action="SelectParentType"
                                asp-route-returnUrl="@(isEdit ? Url.Action("Update", "ArticleType") : Url.Action("Create", "ArticleType"))"
                                style="border-top-left-radius: 0; border-bottom-left-radius: 0;"
                                data-toggle="tooltip"
                                data-placement="right"
                                data-original-title="Назначить родительский тип"
                                title="">
                            <i class="fa fa-pencil"></i>
                        </button>
                    </span>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12">
            <div class="form-group">
                <label class="control-label" asp-for="Name">Рекомендации:</label>
                <div id="recommendations">
                    <table class="table table-responsive" style="width: 100%; margin-bottom: 2px;">
                        @if (Model.Recommendations.Any())
                        {
                            <thead>
                            <tr>
                                <th style="width: 70%"><i class="fa fa-fw fa-comment" aria-hidden="true"></i>Текст</th>
                                <th style="width: 25%"><i class="fa fa-fw fa-hashtag" aria-hidden="true"></i>Значение</th>
                                <th style="width: 5%"></th>
                            </tr>
                            </thead>
                            <tbody>
                            @for (var i = 0; i < Model.Recommendations.Count; i++)
                            {            
                                <tr>
                                    <td style="padding: 2px;"><textarea style="resize: vertical;" class="form-control recommendations" rows="1" asp-for="@Model.Recommendations[i].Comment"></textarea></td>
                                    <td style="padding: 2px;"><input class="form-control recommendations" type="text" asp-for="@Model.Recommendations[i].ValueString"/></td>
                                    <td style="padding: 2px;">
                                        <button class="btn btn-danger" 
                                                type="submit"
                                                asp-action="DeleteRecommendation"
                                                asp-route-isEdit="@isEdit"
                                                asp-route-num="@i"
                                                data-toggle="tooltip"
                                                data-placement="right"
                                                data-original-title="Удалить рекомендацию"
                                                title="">
                                            <i class="fa fa-trash" aria-hidden="true"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        }
                        <tfoot>
                        <tr>
                            <td colspan="2" style="padding: 2px; vertical-align: middle;">
                                @if (!Model.Recommendations.Any())
                                {
                                    <p class="text-info">
                                        <i class="fa fa-fw fa-info" aria-hidden="true"></i>
                                        Рекомендации отсутствуют
                                    </p>
                                }
                            </td>
                            <td style="padding: 2px;">
                                <button class="btn btn-success pull-right"
                                        type="submit"
                                        asp-action="AddRecommendation"
                                        asp-route-isEdit="@isEdit"
                                        data-toggle="tooltip"
                                        data-placement="right"
                                        data-original-title="Добавить рекомендацию"
                                        title="">
                                    <i class="fa fa-plus" aria-hidden="true"></i>
                                </button>
                            </td>
                        </tr>
                        </tfoot>
                    </table>
                </div>                  
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <a class="btn btn-default" asp-controller="Article" asp-action="Index">
                    <i class="fa fa-close"></i>
                    Отмена
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-check"></i>
                    Сохранить
                </button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $("input.input-validation-error").not(".recommendations").closest(".form-group").addClass("has-error");
            $("select.input-validation-error").closest(".form-group").addClass("has-error");           
        });
    </script>
}