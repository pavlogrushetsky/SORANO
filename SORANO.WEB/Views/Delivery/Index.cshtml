@model IEnumerable<DeliveryIndexViewModel>

@{
    ViewBag.Title = "SORANO - Поставки";
    ViewBag.Header = "Список";
    ViewBag.Description = "поставок";
    ViewBag.Icon = "fa fa-cart-arrow-down";
}

@section Styles {
    <link rel="stylesheet" href="~/lib/datatables.net-bs/css/dataTables.bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/datatables.net-responsive-bs/css/responsive.bootstrap.min.css" />
}

@section Breadcrumb {
    <ul class="breadcrumb">
        <li><a asp-controller="Home" asp-action="Index">Главная</a></li>
        <li class="active">Поставки</li>
    </ul>
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Список поставок
                <span class="badge" style="margin-left: 5px;">@Model.Count()</span>
                <a class="btn btn-default btn-xs pull-right"
                   asp-controller="Delivery"
                   asp-action="Create"
                   data-toggle="tooltip"
                   data-placement="right"
                   data-original-title="Добавить поставку"
                   title="">
                    <i class="fa fa-fw fa-plus" aria-hidden="true"></i>
                </a>
                <a class="btn btn-default btn-xs pull-right"
                   asp-controller="Delivery"
                   asp-action="ShowDeleted"
                   asp-route-show=@(ViewBag.ShowDeleted ? "false" : "true")
                   data-toggle="tooltip"
                   data-placement="right"
                   data-original-title=@(ViewBag.ShowDeleted ? "Скрыть удалённые поставки" : "Отобразить удалённые поставки")
                   title="">
                    <i class="fa fa-fw @(ViewBag.ShowDeleted ? "fa-eye-slash" : "fa-eye")" aria-hidden="true"></i>
                </a>
                <div class="clearfix"></div>
            </div>
            <div class="panel-body">
                <table id="deliveries-datatable" class="table table-striped table-hover">
                    <thead>
                    <tr role="row" class="search-row">
                        <th><input type="text" class="form-control input-sm" placeholder="Поставка" /></th>
                        <th><input type="text" class="form-control input-sm" placeholder="Номер"/></th>
                        <th><input type="text" class="form-control input-sm" placeholder="Оплата"/></th>
                        <th><input type="text" class="form-control input-sm" placeholder="Позиций"/></th>
                        <th><input type="text" class="form-control input-sm" placeholder="Сумма"/></th>
                        <th><input type="text" class="form-control input-sm" placeholder="Статус"/></th>
                        <th></th>
                    </tr>
                    <tr role="row">
                        <th><i class="fa fa-fw fa-calendar"></i>Поставка</th>
                        <th><i class="fa fa-fw fa-cart-arrow-down"></i>Номер</th>
                        <th><i class="fa fa-fw fa-calendar"></i>Оплата</th>
                        <th><i class="fa fa-fw fa-hashtag"></i>Позиций</th>
                        <th><i class="fa fa-fw fa-money"></i>Сумма</th>
                        <th><i class="fa fa-fw fa-align-justify"></i>Статус</th>
                        <th>Действия</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var delivery in Model)
                    {
                        <tr class="@(delivery.IsDeleted ? "danger" : "")">
                            <td>@delivery.DeliveryDate</td>
                            <td>
                                <a asp-controller="Delivery"
                                   asp-action="Details"
                                   asp-route-id="@delivery.ID"
                                   data-toggle="tooltip"
                                   data-placement="bottom"
                                   data-original-title="Просмотреть информацию о поставке"
                                   title="">
                                    @delivery.BillNumber
                                </a>
                            </td>                            
                            <td>@delivery.PaymentDate</td>
                            <td>@delivery.DeliveryItemsCount</td>
                            <td>@delivery.TotalPrice @delivery.Currency</td>
                            <td>
                                <span class="label label@(delivery.IsSubmitted ? "-success" : "-warning")">
                                    @(delivery.IsSubmitted ? "Подтверждено" : "Не подтверждено")
                                </span>
                            </td>
                            <td>
                                <a asp-controller="Delivery"
                                   asp-action="Details"
                                   asp-route-id="@delivery.ID"
                                   class="btn btn-xs btn-default"
                                   data-toggle="tooltip"
                                   data-placement="bottom"
                                   data-original-title="Просмотреть информацию о поставке"
                                   title="">
                                    <i class="fa fa-fw fa-info-circle" aria-hidden="true"></i>
                                </a>
                                @if (delivery.CanBeUpdated)
                                {
                                    <a asp-controller="Delivery"
                                       asp-action="Update"
                                       asp-route-id="@delivery.ID"
                                       class="btn btn-xs btn-default"
                                       data-toggle="tooltip"
                                       data-placement="bottom"
                                       data-original-title="Редактировать поставку"
                                       title="">
                                        <i class="fa fa-fw fa-pencil-square" aria-hidden="true"></i>
                                    </a>
                                }                                   
                                @if (delivery.CanBeDeleted)
                                {
                                    <a class="btn btn-xs btn-danger"
                                        data-toggle="tooltip"
                                        data-placement="bottom"
                                        data-original-title="Удалить поставку"
                                        title=""
                                        asp-controller="Delivery"
                                        asp-action="Delete"
                                        asp-route-id="@delivery.ID">
                                        <i class="fa fa-fw fa-trash" aria-hidden="true"></i>
                                    </a>
                                }                                   
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script src="~/lib/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/lib/datatables.net-responsive-bs/js/responsive.bootstrap.min.js"></script>
    <environment names="Development">
        <script src="~/js/pages/deliveryIndex.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/pages/deliveryIndex.min.js" asp-append-version="true"></script>
    </environment>
}