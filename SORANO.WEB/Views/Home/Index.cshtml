@model DashboardModel

@{
    ViewBag.Title = "SORANO - Главная";
    ViewBag.Header = "Главная";
    ViewBag.Icon = "fa fa-home";
}

@section Breadcrumb {
    <ul class="breadcrumb">
        <li class="active">@ViewBag.Header</li>
    </ul>
}

<div class="row">
    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-cart-arrow-down fa-4x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge" style="font-size: 30px;">@Model.DeliveriesCount</div>
                        <div>Поставок</div>
                    </div>
                </div>
            </div>
            <a asp-controller="Delivery" asp-action="Index" style="color: #2c3e50;">
                <div class="panel-footer">
                    <span class="pull-left">Просмотреть детали</span>
                    <span class="pull-right">
                        <i class="fa fa-arrow-circle-right"></i>
                    </span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-money fa-4x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge" style="font-size: 30px;">@Model.TotalIncome</div>
                        <div>Сумма продаж</div>
                    </div>
                </div>
            </div>
            <a asp-controller="Goods" asp-action="Sales" style="color: #2c3e50;">
                <div class="panel-footer">
                    <span class="pull-left">Просмотреть детали</span>
                    <span class="pull-right">
                        <i class="fa fa-arrow-circle-right"></i>
                    </span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-archive fa-4x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge" style="font-size: 30px;">26</div>
                        <div>Наименований</div>
                    </div>
                </div>
            </div>
            <a asp-controller="Article" asp-action="Index" style="color: #2c3e50;">
                <div class="panel-footer">
                    <span class="pull-left">Просмотреть детали</span>
                    <span class="pull-right">
                        <i class="fa fa-arrow-circle-right"></i>
                    </span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>    
</div>

@section Scripts {
    <environment names="Development">
        <script src="~/js/pages/dashboard.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/pages/dashboard.min.js" asp-append-version="true"></script>
    </environment>
}
