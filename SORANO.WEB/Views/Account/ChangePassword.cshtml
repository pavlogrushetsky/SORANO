@model ChangePasswordModel

@{
    Layout = "_AccountLayout";
    ViewBag.Title = "SORANO - Изменение пароля";
}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Изменение пароля для пользователя @Model.Name</h3>
            </div>
            <div class="panel-body">
                <form asp-action="ChangePassword"
                        asp-controller="Account"
                        method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input type="hidden" asp-for="Name"/>
                    <input type="hidden" asp-for="Email"/>
                    <div class="form-group">
                        <label class="control-label" asp-for="OldPassword">Существующий пароль:</label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-key"></i></span>
                            <input class="form-control" type="password" asp-for="OldPassword" placeholder="Существующий пароль"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="NewPassword">Новый пароль:</label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-key"></i></span>
                            <input class="form-control" type="password" asp-for="NewPassword" placeholder="Новый пароль"/>                                   
                        </div>                                
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="RepeatPassword">Новый пароль:</label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-key"></i></span>
                            <input class="form-control" type="password" asp-for="RepeatPassword" placeholder="Повторите новый пароль" />
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="reset" class="btn btn-default">Отмена</button>
                        <button type="submit" class="btn btn-primary">Сохранить</button>
                    </div>                        
                </form>
            </div>
        </div>
    </div>
</div>