@model SupplierModel

@{
    ViewBag.Title = "SORANO - Детали поставщика";
    ViewBag.Header = "Детали";
    ViewBag.Description = "поставщика";
    ViewBag.Icon = "fa fa-info-circle";
}

@section Breadcrumb {
    <ul class="breadcrumb">
        <li>
            <a asp-controller="Home" asp-action="Index">
                <i class="fa fa-home"></i>
                Главная
            </a>
        </li>
        <li>
            <a asp-controller="Supplier" asp-action="Index">
                <i class="fa fa-truck"></i>
                Поставщики
            </a>
        </li>
        <li class="active">Детали поставщика</li>
    </ul>
}

<div class="col-lg-12">
    <div class="row">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.ID)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ID)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>
            }          
            <dt>
                @Html.DisplayNameFor(model => model.Created)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Created)               
            </dd> 
            <dd>
                @Html.DisplayFor(model => model.CreatedBy)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Modified)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Modified)                
            </dd>
            <dd>
                @Html.DisplayFor(model => model.ModifiedBy)
            </dd>
            @if (Model.Recommendations.Any())
            {
                <dt>
                    @Html.DisplayNameFor(model => model.Recommendations)
                </dt>
                <dd>
                    <table class="table table-striped">
                        <tr>
                            <th>Текст</th>
                            <th>Значение</th>
                        </tr>
                        @foreach (var recommendation in Model.Recommendations)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => recommendation.Comment)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => recommendation.ValueString)
                                </td>
                            </tr>
                        }
                    </table>
                </dd>
            }
        </dl>
    </div>
    <div class="row">
        <a class="btn btn-default" asp-controller="Supplier" asp-action="Index">
            <i class="fa fa-arrow-left"></i>
            Назад
        </a>
    </div>
</div>
