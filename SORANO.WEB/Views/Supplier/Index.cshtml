@model IList<SupplierModel>

@{
    ViewBag.Title = "SORANO - Поставщики";
    ViewBag.Header = "Список";
    ViewBag.Description = "поставщиков";
    ViewBag.Icon = "fa fa-truck";
}

@section Styles {
    <link rel="stylesheet" href="~/lib/datatables.net-bs/css/dataTables.bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/datatables.net-responsive-bs/css/responsive.bootstrap.min.css" />
}

@section Breadcrumb {
    <ul class="breadcrumb">
        <li><a asp-controller="Home" asp-action="Index">Главная</a></li>
        <li class="active">Поставщики</li>
    </ul>
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Таблица поставщиков
                <span class="badge" style="margin-left: 5px;">@Model.Count</span>
                <a class="btn btn-default btn-xs pull-right"
                   asp-controller="Supplier"
                   asp-action="Create"
                   data-toggle="tooltip"
                   data-placement="right"
                   data-original-title="Добавить поставщика"
                   title="">
                    <i class="fa fa-plus" aria-hidden="true"></i>
                </a>
                <div class="clearfix"></div>
            </div>
            <div class="panel-body">
                <table id="suppliers-datatable" class="table table-striped table-bordered table-hover table-responsive" style="width: 100%">
                    <thead>
                        <tr role="row" id="search-row">
                            <th style="width: 5%" rowspan="1" colspan="1"></th>
                            <th style="width: 30%" rowspan="1" colspan="1"><input type="text" class="form-control input-sm" style="width: 100%" placeholder="Название" /></th>
                            <th style="width: 53%" rowspan="1" colspan="1"><input type="text" class="form-control input-sm" style="width: 100%" placeholder="Описание" /></th>
                            <th style="width: 12%" rowspan="1" colspan="1"></th>
                        </tr>
                        <tr role="row">
                            <th style="width: 5%">ID</th>
                            <th style="width: 30%"><i class="fa fa-fw fa-truck" aria-hidden="true"></i>&nbsp;Название</th>
                            <th style="width: 53%"><i class="fa fa-fw fa-align-justify" aria-hidden="true"></i>&nbsp;Описание</th>
                            <th style="width: 12%">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var supplier in Model)
                        {
                            <tr>
                                <td>@supplier.ID</td>
                                <td>
                                    <a asp-controller="Supplier"
                                       asp-action="Details"
                                       asp-route-id="@supplier.ID"
                                       data-toggle="tooltip"
                                       data-placement="bottom"
                                       data-original-title="Просмотреть информацию о поставщике"
                                       title="">
                                        @supplier.Name
                                    </a>
                                </td>
                                <td>@supplier.Description</td>
                                <td>
                                    <a asp-controller="Supplier"
                                       asp-action="Details"
                                       asp-route-id="@supplier.ID"
                                       class="btn btn-xs btn-default"
                                       data-toggle="tooltip"
                                       data-placement="bottom"
                                       data-original-title="Просмотреть информацию о поставщике"
                                       title="">
                                        <i class="fa fa-info-circle" aria-hidden="true"></i>
                                    </a>
                                    <a asp-controller="Supplier"
                                       asp-action="Update"
                                       asp-route-id="@supplier.ID"
                                       class="btn btn-xs btn-default"
                                       data-toggle="tooltip"
                                       data-placement="bottom"
                                       data-original-title="Редактировать свойства поставщика"
                                       title="">
                                        <i class="fa fa-pencil-square" aria-hidden="true"></i>
                                    </a>
                                    <a class="btn btn-xs btn-danger @(supplier.CanBeDeleted ? "" : "disabled")"
                                       data-toggle="tooltip"
                                       data-placement="bottom"
                                       data-original-title="Удалить поставщика"
                                       title=""
                                       asp-controller="Supplier"
                                       asp-action="Delete"
                                       asp-route-id="@supplier.ID">
                                        <i class="fa fa-trash" aria-hidden="true"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script src="~/lib/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/lib/datatables.net-responsive-bs/js/responsive.bootstrap.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var table = $("#suppliers-datatable").DataTable({
                responsive: true,
                "columnDefs": [
                    { "orderable": false, "targets": 3 }
                ],
                "pagingType": "numbers",
                "language": {
                    "lengthMenu": "Отобразить _MENU_ поставщиков на странице",
                    "zeroRecords": "Поставщики отсутствуют",
                    "info": "Отображение страницы _PAGE_ из _PAGES_",
                    "infoEmpty": "Записи отсутствуют",
                    "infoFiltered": "(Отфильтровано из _MAX_ записей)",
                    "search": "Поиск"
                }
            });

            table.columns().eq( 0 ).each( function ( colIdx ) {
                $( 'input', $('th')[colIdx] ).on( 'keyup change', function () {
                    table
                        .column( colIdx )
                        .search( this.value )
                        .draw();
                });
            });

            $('.pagination').first().addClass('pagination-sm');
        });
    </script>
}