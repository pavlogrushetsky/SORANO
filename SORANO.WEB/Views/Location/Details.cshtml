@model LocationModel

@{
    ViewBag.Title = "SORANO - Детали места";
    ViewBag.Header = "Детали";
    ViewBag.Description = "места";
    ViewBag.Icon = "fa fa-map-marker";
}

@section Breadcrumb {
    <ul class="breadcrumb">
        <li><a asp-controller="Home" asp-action="Index">Главная</a></li>
        <li><a asp-controller="Location" asp-action="Index">Места</a></li>
        <li class="active">Детали места</li>
    </ul>
}

<div class="col-lg-12">
    <div class="row">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.ID)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ID)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
            @if (!string.IsNullOrEmpty(Model.Comment))
            {
                <dt>
                    @Html.DisplayNameFor(model => model.Comment)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Comment)
                </dd>
            } 
            <dt>
                @Html.DisplayNameFor(model => model.Type)
            </dt>
            <dd>
                <a asp-controller="LocationType"
                   asp-action="Details"
                   asp-route-id="@Model.Type.ID"
                   data-toggle="tooltip"
                   data-placement="right"
                   data-original-title="Просмотреть информацию о типе мест"
                   title="">
                    @Html.DisplayFor(model => model.Type.Name)
                </a>
            </dd>
            <dd>
                @Html.DisplayFor(model => model.Type.Description)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Created)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Created)               
            </dd> 
            <dd>
                @Html.DisplayFor(model => model.CreatedBy)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Modified)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Modified)                
            </dd>
            <dd>
                @Html.DisplayFor(model => model.ModifiedBy)
            </dd>
            @if (Model.Recommendations.Any())
            {
                <dt>
                    @Html.DisplayNameFor(model => model.Recommendations)
                </dt>
                <dd>
                    <table class="table table-striped">
                        <tr>
                            <th>Текст</th>
                            <th>Значение</th>
                        </tr>
                        @foreach (var recommendation in Model.Recommendations)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => recommendation.Comment)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => recommendation.ValueString)
                                </td>
                            </tr>
                        }
                    </table>
                </dd>
            }
        </dl>
    </div>
    <div class="row">
        <a class="btn btn-default" asp-controller="Location" asp-action="Index">
            <i class="fa fa-arrow-left"></i>
            Назад
        </a>
    </div>
</div>
