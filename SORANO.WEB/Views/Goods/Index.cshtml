@model List<GoodsIndexModel>

@{
    ViewBag.Title = "SORANO - Товары";
    ViewBag.Header = "Товары";
    ViewBag.Description = "";
    ViewBag.Icon = "fa fa-archive";
}

@section Styles {
    <link rel="stylesheet" href="~/lib/datatables.net-bs/css/dataTables.bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/datatables.net-responsive-bs/css/responsive.bootstrap.min.css" />
}

@section Breadcrumb {
    <ul class="breadcrumb">
        <li><a asp-controller="Home" asp-action="Index">Главная</a></li>
        <li class="active">Товары</li>
    </ul>
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Список товаров
            </div>
            <div class="panel-body">
                <table id="goods-datatable" class="table table-striped table-bordered table-hover table-responsive">
                    <thead>
                    <tr role="row" class="search-row">
                        <th style="width: 20%" rowspan="1" colspan="1"><input type="text" class="form-control input-sm" placeholder="Артикул" /></th>
                        <th style="width: 20%" rowspan="1" colspan="1"><input type="text" class="form-control input-sm" placeholder="Место" /></th>
                        <th style="width: 20%" rowspan="1" colspan="1"><input type="text" class="form-control input-sm" placeholder="Поставка" /></th>
                        <th style="width: 20%" rowspan="1" colspan="1"><input type="text" class="form-control input-sm" placeholder="Кол-во, шт." /></th>
                        <th style="width: 20%" rowspan="1" colspan="1"><input type="text" class="form-control input-sm" placeholder="Цена поставки" /></th>
                    </tr>
                    <tr role="row">
                        <th style="width: 20%"><i class="fa fa-fw fa-barcode" aria-hidden="true"></i>&nbsp;Артикул</th>
                        <th style="width: 20%"><i class="fa fa-fw fa-map-signs" aria-hidden="true"></i>&nbsp;Место</th>
                        <th style="width: 20%"><i class="fa fa-fw fa-cart-arrow-down" aria-hidden="true"></i>&nbsp;Поставка</th>
                        <th style="width: 20%"><i class="fa fa-fw fa-hashtag" aria-hidden="true"></i>&nbsp;Кол-во, шт</th>
                        <th style="width: 20%"><i class="fa fa-fw fa-money" aria-hidden="true"></i>&nbsp;Цена поставки</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var goodsGroup in Model)
                    {
                        for (var i = 0; i < goodsGroup.Goods?.Count; i++)
                        {
                            <tr>
                                <td>
                                    <a asp-controller="Article"
                                       asp-action="Details"
                                       asp-route-id="@goodsGroup.ArticleId"
                                       data-toggle="tooltip"
                                       data-placement="bottom"
                                       data-original-title="Просмотреть информацию об артикуле"
                                       title="">
                                        @goodsGroup.ArticleName
                                    </a>
                                </td>
                                <td>
                                    <a asp-controller="Location"
                                       asp-action="Details"
                                       asp-route-id="@goodsGroup.Goods?[i].LocationId"
                                       data-toggle="tooltip"
                                       data-placement="bottom"
                                       data-original-title="Просмотреть информацию о месте"
                                       title="">
                                        @goodsGroup.Goods?[i].LocationName
                                    </a>
                                </td>
                                <td>
                                    <a asp-controller="Delivery"
                                       asp-action="Details"
                                       asp-route-id="@goodsGroup.Goods?[i].DeliveryId"
                                       data-toggle="tooltip"
                                       data-placement="bottom"
                                       data-original-title="Просмотреть информацию о поставке"
                                       title="">
                                        @goodsGroup.Goods?[i].BillNumber
                                    </a>
                                </td>
                                <td>@goodsGroup.Goods?[i].Count</td>
                                <td>@goodsGroup.Goods?[i].DeliveryPrice</td>
                            </tr>
                        }                        
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script src="~/lib/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/lib/datatables.net-responsive-bs/js/responsive.bootstrap.min.js"></script>
    <environment names="Development">
        <script src="~/js/pages/goodsIndex.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/pages/goodsIndex.min.js" asp-append-version="true"></script>
    </environment>
}