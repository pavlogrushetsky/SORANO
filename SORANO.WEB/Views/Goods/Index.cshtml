@model IEnumerable<GoodsIndexViewModel>

@{
    ViewBag.Title = "SORANO - Товары";
    ViewBag.Header = "Товары";
    ViewBag.Description = "";
    ViewBag.Icon = "fa fa-archive";
}

@section Styles {
    <link rel="stylesheet" href="~/lib/datatables.net-bs/css/dataTables.bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/datatables.net-responsive-bs/css/responsive.bootstrap.min.css" />
}

@section Breadcrumb {
    <ul class="breadcrumb">
        <li><a asp-controller="Home" asp-action="Index">Главная</a></li>
        <li class="active">Товары</li>
    </ul>
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Список товаров
            </div>
            <div class="panel-body">
                <table id="goods-datatable" class="table table-striped table-hover">
                    <thead>
                    <tr role="row" class="search-row">
                        <th><input type="text" class="form-control input-sm" placeholder="Артикул" /></th>                       
                        <th><input type="text" class="form-control input-sm" placeholder="Поставка" /></th>
                        <th><input type="text" class="form-control input-sm" placeholder="Склад" /></th>
                        <th><input type="text" class="form-control input-sm" placeholder="Цена поставки" /></th>
                        <th><input type="text" class="form-control input-sm" placeholder="Кол-во, шт." /></th>                       
                        <th><input type="text" class="form-control input-sm" placeholder="Статус" /></th>
                        <th></th>
                    </tr>
                    <tr role="row">
                        <th><i class="fa fa-fw fa-barcode"></i>Артикул</th>
                        <th><i class="fa fa-fw fa-cart-arrow-down"></i>Поставка</th>
                        <th><i class="fa fa-fw fa-map-signs"></i>Склад</th>     
                        <th><i class="fa fa-fw fa-money"></i>Цена поставки</th>
                        <th><i class="fa fa-fw fa-hashtag"></i>Кол-во, шт</th>    
                        <th><i class="fa fa-fw fa-align-justify"></i>Статус</th> 
                        <th>Действия</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var goods in Model)
                    {
                        <tr>
                            <td>
                                <a asp-controller="Article"
                                   asp-action="Details"
                                   asp-route-id="@goods.ArticleID"
                                   data-toggle="tooltip"
                                   data-placement="bottom"
                                   data-original-title="Просмотреть информацию об артикуле"
                                   title="">
                                    @goods.ArticleName
                                </a>
                            </td>
                            <td>
                                <a asp-controller="Delivery"
                                   asp-action="Details"
                                   asp-route-id="@goods.DeliveryID"
                                   data-toggle="tooltip"
                                   data-placement="bottom"
                                   data-original-title="Просмотреть информацию о поставке"
                                   title="">
                                    @goods.DeliveryBillNumber
                                </a>
                            </td>
                            <td>
                                <a asp-controller="Location"
                                   asp-action="Details"
                                   asp-route-id="@goods.StorageID"
                                   data-toggle="tooltip"
                                   data-placement="bottom"
                                   data-original-title="Просмотреть информацию о складе"
                                   title="">
                                    @goods.StorageName
                                </a>
                            </td>                           
                            <td>@goods.DeliveryPrice @goods.Currency</td>
                            <td>@goods.Quantity</td>
                            <td>
                                <span class="label label@(goods.IsSold ? "-warning" : "-success")">
                                    @(goods.IsSold ? "Нет в наличии" : "Есть в наличии")
                                </span>
                            </td>
                            <td></td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script src="~/lib/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/lib/datatables.net-responsive-bs/js/responsive.bootstrap.min.js"></script>
    <environment names="Development">
        <script src="~/js/pages/goodsIndex.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/pages/goodsIndex.min.js" asp-append-version="true"></script>
    </environment>
}