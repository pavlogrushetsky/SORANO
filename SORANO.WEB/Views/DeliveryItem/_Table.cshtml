@model DeliveryItemTableViewModel

<table id="items-datatable" class="table table-striped table-hover">
    <thead>
    <tr role="row" class="search-row">         
        @if (Model.Mode != DeliveryItemTableMode.DeliveryDetails)
        {
            <th><input type="text" class="form-control input-sm" placeholder="Дата" /></th>
            <th><input type="text" class="form-control input-sm" placeholder="Поставка" /></th>
        }
        @if (Model.Mode != DeliveryItemTableMode.ArticleDetails)
        {
            <th><input type="text" class="form-control input-sm" placeholder="Артикул" /></th>
        } 
        <th><input type="text" class="form-control input-sm" placeholder="Кол-во, шт."/></th>
        <th><input type="text" class="form-control input-sm" placeholder="Цена"/></th>
        <th><input type="text" class="form-control input-sm" placeholder="Без скидки"/></th>
        <th><input type="text" class="form-control input-sm" placeholder="Скидка"/></th>
        <th><input type="text" class="form-control input-sm" placeholder="Сумма"/></th>
    </tr>
    <tr role="row">          
        @if (Model.Mode != DeliveryItemTableMode.DeliveryDetails)
        {
            <th><i class="fa fa-fw fa-calendar"></i>Дата</th>
            <th><i class="fa fa-fw fa-cart-arrow-down"></i>Поставка</th>
        } 
        @if (Model.Mode != DeliveryItemTableMode.ArticleDetails)
        {
            <th><i class="fa fa-fw fa-barcode"></i>Артикул</th>
        } 
        <th><i class="fa fa-fw fa-hashtag"></i>Кол-во, шт.</th>
        <th><i class="fa fa-fw fa-money"></i>Цена</th>
        <th><i class="fa fa-fw fa-money"></i>Без скидки</th>
        <th><i class="fa fa-fw fa-money"></i>Скидка</th>
        <th><i class="fa fa-fw fa-money"></i>Сумма</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>                  
                @if (Model.Mode != DeliveryItemTableMode.DeliveryDetails)
                {
                    <td>@item.DeliveryDate</td>
                    <td>
                        <a asp-controller="Delivery"
                           asp-action="Details"
                           asp-route-id="@item.DeliveryID"
                           data-toggle="tooltip"
                           data-placement="bottom"
                           data-original-title="Просмотреть информацию о поставке"
                           title="">
                            @item.DeliveryBillNumber
                        </a>
                    </td>
                }
                @if (Model.Mode != DeliveryItemTableMode.ArticleDetails)
                {
                    <td>
                        <a asp-controller="Article"
                           asp-action="Details"
                           asp-route-id="@item.ArticleID"
                           data-toggle="tooltip"
                           data-placement="bottom"
                           data-original-title="Просмотреть информацию об артикуле"
                           title="">
                            @item.ArticleName
                        </a>
                    </td>
                } 
                <td>@item.Quantity</td>
                <td>@item.UnitPrice @item.Currency</td>
                <td>@item.GrossPrice @item.Currency</td>
                <td>@item.Discount @item.Currency</td>
                <td>@item.DiscountedPrice @item.Currency</td>
            </tr>
        }
    </tbody>
</table>