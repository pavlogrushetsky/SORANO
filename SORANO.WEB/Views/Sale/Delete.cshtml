@model SaleDeleteViewModel

@{
    ViewBag.Title = "SORANO - Отмена продажи";
    ViewBag.Header = "Отмена";
    ViewBag.Description = "продажи";
    ViewBag.Icon = "fa fa-fw fa-hand-stop-o";
}

@section Breadcrumb {
    <ul class="breadcrumb">
        <li><a asp-controller="Home" asp-action="Index">Главная</a></li>
        <li><a asp-controller="Sale" asp-action="Index">Продажи</a></li>
        <li class="active">Отмена продажи</li>
    </ul>
}

<div class="row">
    @await Component.InvokeAsync("CanBeDeleted", new
{
    canBeDeleted = Model.CanBeDeleted,
    error = "Подтверждённая продажа не может быть отменена.",
    warning = "Вы уверены, что хотите отменить следующую продажу? Все добавленные в продажу товары станут доступны для новых продаж."
})
</div>
<div class="row">
    <div class="col-lg-12">
        <form asp-action="Delete">
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <a class="btn btn-default btn-sm" asp-action="Index" asp-controller="Sale">
                    <i class="fa fa-fw fa-close"></i>
                    Отмена
                </a>
                @if (Model.CanBeDeleted)
                {
                    <button type="submit" class="btn btn-warning btn-sm">
                        <i class="fa fa-fw fa-hand-stop-o"></i>
                        Отменить продажу
                    </button>
                }
            </div>
        </form>
    </div>
</div>