@model SaleCreateUpdateViewModel

@{
    var title = "Оформление";
    var returnUrl = Model.IsUpdate ? Url.Action("Update", "Sale") : Url.Action("Create", "Sale");
}

@{
    ViewBag.Title = "SORANO - " + title + " продажи";
    ViewBag.Header = title;
    ViewBag.Description = " продажи";
    ViewBag.Icon = "fa fa-handshake-o";
}

@section Styles {
    <link rel="stylesheet" href="~/lib/datatables.net-bs/css/dataTables.bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/datatables.net-responsive-bs/css/responsive.bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/select2/dist/css/select2.min.css" />
    <link rel="stylesheet" href="~/lib/select2-bootstrap-theme/dist/select2-bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css" />
    <style>
        span.select2-selection.select2-selection--single {
            border-top-left-radius: 0 !important;
            border-bottom-left-radius: 0 !important;
        }

        #sale-items-table-body td {
            padding-top: 0;
            padding-bottom: 0;
            vertical-align: middle;
        }

            #sale-items-table-body td > input, #sale-items-table-body td > select {
                width: 100%;
            }

        #sale-items-table-body tr {
            margin-bottom: 10px;
        }
    </style>
}

@section Breadcrumb {
    <ul class="breadcrumb">
        <li><a asp-controller="Home" asp-action="Index">Главная</a></li>
        <li><a asp-controller="Sale" asp-action="Index">Продажи</a></li>
        <li class="active">@title продажи</li>
    </ul>
}

<form asp-controller="Sale"
      asp-action="@(Model.IsUpdate ? "Update" : "Create")"
      method="post"
      enctype="multipart/form-data">
    <input type="hidden" asp-for="ID" />
    <input type="hidden" asp-for="IsUpdate" />
    <input type="hidden" asp-for="AllowChangeLocation" />
    <input type="hidden" asp-for="LocationID" />
    <input type="hidden" asp-for="LocationName" />
    <input type="hidden" asp-for="ClientID" />
    <input type="hidden" asp-for="ClientName" />
    <input type="hidden" asp-for="SelectedCurrency" />
    <input type="hidden" asp-for="ShowSelected" />
    @for (var i = 0; i < Model.Recommendations.Count; i++)
    {
        <input type="hidden" asp-for="@Model.Recommendations[i].ID" />
    }
    @for (var i = 0; i < Model.Attachments.Count; i++)
    {
        <input type="hidden" asp-for="@Model.Attachments[i].ID" />
        <input type="hidden" asp-for="@Model.Attachments[i].IsNew" />
        <input type="hidden" asp-for="@Model.Attachments[i].FullPath" />
        <input type="hidden" asp-for="@Model.Attachments[i].MimeTypes" />
        <input type="hidden" asp-for="@Model.Attachments[i].TypeName" />
        <input type="hidden" asp-for="@Model.Attachments[i].TypeID" />
    }
    @for (var i = 0; i < Model.Groups.Count; i++)
    {
        for (var j = 0; j < Model.Groups[i].Items.Count; j++)
        {
            <input type="hidden" asp-for="@Model.Groups[i].Items[j].GoodsId" />
        }
    }
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-lg-12">
            <div class="alert alert-dismissible alert-info">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong>Информация:</strong> Поля, отмеченные символом *, являются обязательными для ввода
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6 col-md-12 col-sm-12">
            <div class="form-group">
                <label class="control-label" asp-for="LocationID"></label>
                <div class="input-group input-group-sm">
                    <span class="input-group-addon"><i class="fa fa-fw fa-map-marker"></i></span>
                    <select class="form-control input-sm select-location"
                            asp-for="LocationID" autofocus></select>
                </div>
                <span asp-validation-for="LocationID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="ClientID"></label>
                <div class="input-group input-group-sm">
                    <span class="input-group-addon"><i class="fa fa-fw fa-address-book"></i></span>
                    <select class="form-control input-sm select-client"
                            asp-for="ClientID"></select>
                    @if (Model.AllowCreation)
                    {
                        <span class="input-group-btn">
                            <button class="btn btn-default btn-sm"
                                    asp-action="CreateClient"
                                    asp-route-returnUrl="@returnUrl"
                                    data-toggle="tooltip"
                                    data-placement="right"
                                    data-original-title="Создать клиента"
                                    title="">
                                <i class="fa fa-fw fa-plus"></i>
                            </button>
                        </span>
                    }
                </div>
                <span asp-validation-for="ClientID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="Date"></label>
                <div class="input-group input-group-sm date" id="pick-date">
                    <input class="form-control input-sm" type="text" asp-for="Date" placeholder="Дата продажи" />
                    <span class="input-group-addon">
                        <span class="fa fa-fw fa-calendar"></span>
                    </span>
                </div>
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Валюта</label>
                <table class="table table-responsive" style="width: 100%; margin-bottom: 0;">
                    <tbody>
                        <tr>
                            <td style="width: 33%; padding: 0; padding-right: 5px;">
                                <div class="input-group input-group-sm">
                                    <span class="input-group-addon">
                                        <input type="radio" name="select_currency" id="select_currency_uah" value="0" style="margin-right: 1px;" />
                                        <span style="font-weight: bold;">&#8372;</span>
                                    </span>
                                    <input type="text" readonly="readonly" class="form-control input-sm" value="1.00" />
                                </div>
                            </td>
                            <td style="width: 33%; padding: 0; padding-right: 5px;">
                                <div class="input-group input-group-sm">
                                    <span class="input-group-addon">
                                        <input type="radio" name="select_currency" id="select_currency_usd" value="1" />
                                        <i class="fa fa-usd"></i>
                                    </span>
                                    <input type="text" readonly="readonly" asp-for="DollarRate" class="form-control input-sm" />
                                </div>
                                <span asp-validation-for="DollarRate" class="text-danger"></span>
                            </td>
                            <td style="width: 33%; padding: 0; padding-right: 5px;">
                                <div class="input-group input-group-sm">
                                    <span class="input-group-addon">
                                        <input type="radio" name="select_currency" id="select_currency_eur" value="2" />
                                        <i class="fa fa-eur"></i>
                                    </span>
                                    <input type="text" readonly="readonly" asp-for="EuroRate" class="form-control input-sm" />
                                </div>
                                <span asp-validation-for="EuroRate" class="text-danger"></span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-lg-6 col-md-12 col-sm-12">
            @Html.Partial("~/Views/Shared/_AttachmentsForm.cshtml", Model)
            @Html.Partial("~/Views/Shared/_RecommendationsForm.cshtml", Model)
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <label class="control-label">Список товаров</label>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                            <div class="input-group input-group-sm pull-left">
                                <input class="form-control input-sm" type="text" placeholder="Поиск ..." />
                                <span class="input-group-addon">
                                    <span class="fa fa-fw fa-search"></span>
                                </span>
                            </div>
                        </div>
                        <div class="col-lg-8 col-md-8 col-sm-6 col-xs-12">
                            <button class="btn btn-default btn-sm pull-right"
                                    style="margin-left: 5px;"
                                    asp-controller="Sale"
                                    asp-action="Refresh"
                                    data-toggle="tooltip"
                                    data-placement="right"
                                    data-original-title="Обновить список товаров"
                                    title="">
                                <i class="fa fa-fw fa-refresh" style="color: #2c3e50" aria-hidden="true"></i>
                            </button>
                            <button class="btn btn-default btn-sm pull-right"
                                    asp-controller="Sale"
                                    asp-action="ShowSelected"
                                    asp-route-show="@(Model.ShowSelected ? "false" : "true")"
                                    data-toggle="tooltip"
                                    data-placement="right"
                                    data-original-title=@(Model.ShowSelected ? "Отобразить все товары" : "Отобразить выбранные товары")
                                    title="">
                                <i class="fa fa-fw @(Model.ShowSelected ? "fa-eye" : "fa-eye-slash")" aria-hidden="true"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="pull-right" style="margin-bottom: 20px;">
                        <span>Выбрано </span><span class="badge">@Model.SelectedCount</span><span> товаров на сумму </span><span class="badge">@Model.TotalPrice @Model.SelectedCurrency</span>
                    </div>

                    @if (Model.Groups.Any())
                    {
                        <br />
                        <div class="sale-items-groups-tree">
                            <ul>
                                @for (var i = 0; i < Model.Groups.Count; i++)
                                {

                                    <li class="@(Model.Groups[i].IsSelected ? "sale-group-selected" : "")">
                                        <table class="table table-striped table-hover" id="sale_group_@(Model.ID)_@i">
                                            <tr>
                                                <td style="width: 75px;">
                                                    @if (Model.Groups[i].HasMainPicture)
                                                    {
                                                        <img class="sale-img" src="@Url.Content(Model.Groups[i].MainPicturePath)" />
                                                    }
                                                </td>
                                                <td>
                                                    <span>@Model.Groups[i].ArticleName</span><br />
                                                    <span class="sale-item-group-description">@Model.Groups[i].ArticleTypeName</span>
                                                </td>
                                                <td>Общее кол-во: <b>@Model.Groups[i].Count</b></td>
                                                <td>Выбрано: <b>@Model.Groups[i].SelectedCount</b></td>
                                                <td style="width: 20%;">
                                                    <div class="input-group input-group-sm">
                                                        <span class="input-group-addon"><i class="fa fa-fw fa-money"></i></span>
                                                        <input class="form-control input-sm" type="text" asp-for="@Model.Groups[i].Price" placeholder="Цена" autofocus />
                                                    </div>
                                                </td>
                                                <td style="width: 20px;">
                                                    @if (Model.Groups[i].IsSelected)
                                                    {
                                                        <button asp-controller="Sale"
                                                                asp-action="RemoveAllGoods"
                                                                asp-route-goodsids="@Model.Groups[i].GoodsIds"
                                                                class="btn btn-sm pull-right"
                                                                data-toggle="tooltip"
                                                                data-placement="bottom"
                                                                data-original-title="Убрать все"
                                                                title=""
                                                                style="background-color: inherit;">
                                                            <i class="fa fa-fw fa-times" style="color: #f39c12;" aria-hidden="true"></i>
                                                        </button>
                                                    }
                                                    else
                                                    {
                                                        <button asp-controller="Sale"
                                                                asp-action="AddAllGoods"
                                                                asp-route-goodsids="@Model.Groups[i].GoodsIds"
                                                                class="btn btn-sm pull-right"
                                                                data-toggle="tooltip"
                                                                data-placement="bottom"
                                                                data-original-title="Добавить все"
                                                                title=""
                                                                style="background-color: inherit;">
                                                            <i class="fa fa-fw fa-cart-plus" style="color: #18bc9c;" aria-hidden="true"></i>
                                                        </button>
                                                    }
                                                </td>
                                            </tr>
                                        </table>
                                        <ul>
                                            @for (int j = 0; j < Model.Groups[i].Items.Count; j++)
                                            {
                                                <li class="@(Model.Groups[i].Items[j].IsSelected ? "sale-item-selected" : "")" style="display: none;">
                                                    <table class="table table-hover table-striped">
                                                        <tr>
                                                            <td style="padding-left: 15px;" colspan="2">
                                                                <i class="fa fa-fw fa-commenting" style="color: #3498db; opacity: 0.65;" aria-hidden="true"></i>
                                                                <a class="toggle-sale-item-recommendations"
                                                                   style="color: inherit;"
                                                                   href="javascript:void(0);"
                                                                   title=""
                                                                   data-toggle="tooltip"
                                                                   data-placement="bottom"
                                                                   data-original-title="Показать/скрыть рекомендации">
                                                                    Рекомендаций: <b>@Model.Groups[i].Items[j].Recommendations.Count</b>
                                                                </a>                                                               
                                                            </td>
                                                            <td style="width: 20%;">
                                                                <div class="input-group input-group-sm">
                                                                    <span class="input-group-addon"><i class="fa fa-fw fa-money"></i></span>
                                                                    <input class="form-control input-sm sale-item-price" type="text" asp-for="@Model.Groups[i].Items[j].Price" placeholder="Цена" />
                                                                </div>
                                                            </td>
                                                            <td style="width: 20px;" nowrap="nowrap">
                                                                @if (Model.Groups[i].Items[j].IsSelected)
                                                                {
                                                                    <button asp-controller="Sale"
                                                                            asp-action="RemoveGoods"
                                                                            asp-route-goodsid="@Model.Groups[i].Items[j].GoodsId"
                                                                            class="btn btn-sm pull-right remove-goods"
                                                                            data-toggle="tooltip"
                                                                            data-placement="bottom"
                                                                            data-original-title="Убрать"
                                                                            title=""
                                                                            style="background-color: inherit;">
                                                                        <i class="fa fa-fw fa-times" style="color: #f39c12;" aria-hidden="true"></i>
                                                                    </button>
                                                                }
                                                                else
                                                                {
                                                                    <button asp-controller="Sale"
                                                                            asp-action="AddGoods"
                                                                            asp-route-goodsid="@Model.Groups[i].Items[j].GoodsId"
                                                                            class="btn btn-sm pull-right add-goods"
                                                                            data-toggle="tooltip"
                                                                            data-placement="bottom"
                                                                            data-original-title="Добавить"
                                                                            title=""
                                                                            style="background-color: inherit;">
                                                                        <i class="fa fa-fw fa-cart-plus" style="color: #18bc9c;" aria-hidden="true"></i>
                                                                    </button>
                                                                }
                                                            </td>
                                                        </tr>
                                                        @for (var k = 0; k < Model.Groups[i].Items[j].Recommendations.Count; k++)
                                                        {
                                                            <tr style="background-color: #bee0f7;">
                                                                <td style="width: 60%;padding-left: 50px;">@Model.Groups[i].Items[j].Recommendations[k].Comment</td>
                                                                <td style="width: 20%;">@Model.Groups[i].Items[j].Recommendations[k].Value</td>
                                                                <td style="width: 20%;"></td>
                                                                <td style="width: 20px;"></td>
                                                            </tr>
                                                        }                                                        
                                                    </table>
                                                </li>
                                            }
                                        </ul>
                                    </li>
                                }
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="form-group">
                <a class="btn btn-default btn-sm" asp-controller="Sale" asp-action="Index">
                    <i class="fa fa-fw fa-arrow-left"></i>
                    Назад
                </a>
                <button class="btn btn-success btn-sm submit-sale">
                    <i class="fa fa-fw fa-check"></i>
                    Подтвердить
                </button>
                @if (Model.LocationID > 0)
                {
                    <a class="btn btn-warning btn-sm"
                       asp-controller="Sale"
                       asp-action="Delete"
                       asp-route-id="@Model.ID">
                        <i class="fa fa-fw fa-hand-stop-o"></i>
                        Отменить продажу
                    </a>
                }
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script src="~/lib/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script src="~/lib/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/lib/datatables.net-responsive-bs/js/responsive.bootstrap.min.js"></script>
    <script src="~/lib/select2/dist/js/select2.full.min.js"></script>
    <script src="~/lib/moment/min/moment-with-locales.min.js"></script>
    <script src="~/lib/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js"></script>
    <environment names="Development">
        <script src="~/js/pages/saleCreate.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/pages/saleCreate.min.js" asp-append-version="true"></script>
    </environment>
}