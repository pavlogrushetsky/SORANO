<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Список продаж
                <span class="badge" style="margin-left: 5px;">@Model.Items.Count</span>
                <a class="btn btn-default btn-xs pull-right"
                   asp-controller="Sale"
                   asp-action="Create"
                   data-toggle="tooltip"
                   data-placement="right"
                   data-original-title="Оформить продажу"
                   title="">
                    <i class="fa fa-fw fa-plus" aria-hidden="true"></i>
                </a>
                <a class="btn btn-default btn-xs pull-right"
                   asp-controller="Sale"
                   asp-action="ShowDeleted"
                   asp-route-show=@(ViewBag.ShowDeleted ? "false" : "true")
                   data-toggle="tooltip"
                   data-placement="right"
                   data-original-title=@(ViewBag.ShowDeleted ? "Скрыть удалённые продажи" : "Отобразить удалённые продажи")
                   title="">
                    <i class="fa fa-fw @(ViewBag.ShowDeleted ? "fa-eye-slash" : "fa-eye")" aria-hidden="true"></i>
                </a>
                <div class="clearfix"></div>
            </div>
            <div class="panel-body">
                <table id="sales-datatable" class="table table-striped table-hover">
                    <thead>
                        <tr role="row" class="search-row">
                            <th><input type="text" class="form-control input-sm" placeholder="Клиент" /></th>
                            <th><input type="text" class="form-control input-sm" placeholder="Артикул" /></th>
                            <th><input type="text" class="form-control input-sm" placeholder="Место" /></th>
                            <th><input type="text" class="form-control input-sm" placeholder="Кол-во, шт." /></th>
                            <th><input type="text" class="form-control input-sm" placeholder="Общая сумма" /></th>
                            <th><input type="text" class="form-control input-sm" placeholder="Дата" /></th>
                        </tr>
                        <tr role="row">
                            <th><i class="fa fa-fw fa-address-book" aria-hidden="true"></i>Клиент</th>
                            <th><i class="fa fa-fw fa-barcode" aria-hidden="true"></i>Артикул</th>
                            <th><i class="fa fa-fw fa-map-marker" aria-hidden="true"></i>Место</th>
                            <th><i class="fa fa-fw fa-hashtag" aria-hidden="true"></i>Кол-во, шт.</th>
                            <th><i class="fa fa-fw fa-money" aria-hidden="true"></i>Общая сумма</th>
                            <th><i class="fa fa-fw fa-calendar" aria-hidden="true"></i>Дата</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var sale in Model.Items)
                        {
                            <tr class="@(sale.IsDeleted ? "danger" : "")">
                                <td>
                                    <a asp-controller="Client"
                                       asp-action="Details"
                                       asp-route-id="@sale.ClientID"
                                       data-toggle="tooltip"
                                       data-placement="bottom"
                                       data-original-title="Просмотреть информацию о клиенте"
                                       title="">
                                        @sale.ClientName
                                    </a>
                                </td>
                                <td>
                                    <a asp-controller="Article"
                                       asp-action="Details"
                                       asp-route-id="@sale.ArticleID"
                                       data-toggle="tooltip"
                                       data-placement="bottom"
                                       data-original-title="Просмотреть информацию об артикуле"
                                       title="">
                                        @sale.ArticleName
                                    </a>
                                </td>
                                <td>
                                    <a asp-controller="Location"
                                       asp-action="Details"
                                       asp-route-id="@sale.LocationID"
                                       data-toggle="tooltip"
                                       data-placement="bottom"
                                       data-original-title="Просмотреть информацию о месте"
                                       title="">
                                        @sale.LocationName
                                    </a>
                                </td>
                                <td>@sale.Count</td>
                                <td>@sale.TotalPrice</td>
                                <td>@sale.SaleDate</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script src="~/lib/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/lib/datatables.net-responsive-bs/js/responsive.bootstrap.min.js"></script>
    <environment names="Development">
        <script src="~/js/pages/goodsSales.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/pages/goodsSales.min.js" asp-append-version="true"></script>
    </environment>
}
